{{>header}}
{{>navbar}}
{{>breadcrumb}}

<div class="container-fluid mt-4" >
  <!-- Hero Banner -->
  <div class="sidebar bg-primary rounded-3 px-4 py-3 d-flex justify-content-between align-items-center text-white shadow-sm">
  <!-- Left: Heading -->
  <div class="d-flex align-items-center justify-center  gap-2 ">
    <i class="bi bi-calendar-event-fill fs-4"></i>
    <h2 class="mb-0 fs-4 text-white">Event Details</h2>
  </div>

  <!-- Right: Action Icons -->
  <div class="d-flex align-items-center gap-3">
    <!-- Back -->
    <a href="/admin/events" class="text-white text-decoration-none" title="Back">
      <i class="bi bi-arrow-left-circle-fill fs-4 hover-icon"></i>
    </a>
    <!-- Edit -->
    <a href="/admin/event/updatePage/{{data._id}}" class="text-white text-decoration-none" title="Edit">
      <i class="bi bi-pencil-fill fs-4 hover-icon"></i>
    </a>
    <!-- Delete -->
    <a href="/admin/event/delete/{{data._id}}" class="text-white text-decoration-none" title="Delete"
       onclick="return confirm('Are you sure you want to delete this event?');">
      <i class="bi bi-trash-fill fs-4 hover-icon"></i>
    </a>
  </div>
</div>

  <div class="card shadow-lg border-0 glass-card">
    <div class="row g-0">
      <!-- Left Column -->
      <div class="col-md-7 p-4">
        <h3 class="card-title text-gradient mb-3">{{data.title}}</h3>
        <ul class="list-group list-group-flush mb-3">
          <li class="list-group-item"><i class="bi bi-hash text-primary"></i> <strong>Id:</strong> {{data._id}}</li>
          <li class="list-group-item"><i class="bi bi-clock text-primary"></i> <strong>Date:</strong> {{data.date}}</li>
          <li class="list-group-item"><i class="bi bi-card-text text-primary"></i> <strong>Short Description:</strong> {{ data.shortDescription}}</li>
          <li class="list-group-item"><i class="bi bi-file-text text-primary"></i> <strong>Long Description:</strong> {{ data.longDescription}}</li>
           <li class="list-group-item"><i class="bi bi-person text-primary"></i> <strong>Created By: </strong>{{ data.createdBy}} at {{formatDateTime data.createdAt}}</li>
          <li class="list-group-item"><i class="bi bi-person text-primary"></i> <strong>Update By: </strong>{{ data.updatedBy}} at {{formatDateTime data.updatedAt}}</li>
           <li class="list-group-item"><i class="bi bi-check-circle text-primary"></i> <strong>Active:</strong> 
            <span class="badge {{#if data.active}}bg-success{{else}}bg-danger{{/if}}">{{chkactive data.active}}</span>
          </li>
        </ul>
      </div>

      <!-- Right Column -->
      <div class="col-md-5 d-flex align-items-center justify-content-center p-4">
        <img src="{{data.pic}}" alt="event image" class="img-fluid event-img">
      </div>
    </div>
  </div>
</div>

{{>footer}}