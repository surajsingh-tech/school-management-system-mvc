{{>header}}
{{>navbar}}
{{>breadcrumb}}

<div class="container-fluid mt-4" >
  <!-- Hero Banner -->
  <div class="sidebar bg-primary rounded-3 px-4 py-3 d-flex justify-content-between align-items-center text-white shadow-sm">
  <!-- Left: Heading -->
  <div class="d-flex align-items-center justify-center  gap-2 ">
    <i class="bi bi-calendar-event-fill fs-4"></i>
    <h2 class="mb-0 fs-4 text-white">Event Setting</h2>
  </div>

  <!-- Right: Action Icons -->
  <div class="d-flex align-items-center gap-3">
    <!-- Back -->
    <a href="/admin/events" class="text-white text-decoration-none" title="Back">
      <i class="bi bi-arrow-left-circle-fill fs-4 hover-icon"></i>
    </a>
    <!-- Edit -->
    <a href="/admin/event/updatePage/{{event._id}}" class="text-white text-decoration-none" title="Edit">
      <i class="bi bi-pencil-fill fs-4 hover-icon"></i>
    </a>
    <!-- Delete -->
    <a href="/admin/event/delete/{{event._id}}" class="text-white text-decoration-none" title="Delete"
       onclick="return confirm('Are you sure you want to delete this event?');">
      <i class="bi bi-trash-fill fs-4 hover-icon"></i>
    </a>
  </div>
</div>
    <div class="container-fluid bg-gradient bgblack">
  <div class="row">
    <div class="col-md-3">
      {{>sidebar}}
    </div>
    <div class="col-md-9 mb-3">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header custom-header text-white d-flex justify-content-between align-items-center sidebar">
          <h2 class="mb-0 text-uppercase fw-bold text-white">
            <i class="fa fa-gear me-2"></i> Admin Settings
          </h2>
          <a href="/admin/events/create" class="btn btn-dark btn-sm rounded-pill fw-bolder">
            <i class="fa fa-plus me-1"></i> Add New
          </a>
        </div>
        <div class="card-body p-4">
          <table class="table table-bordered table-striped text-center align-middle">
            <thead class="table-dark">
              <tr>
                <th>Field</th>
                <th>Value</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>Google Map URL 1</td>
                <td>{{map1}}</td>
              </tr>
              <tr>
                <td>Google Map URL 2</td>
                <td>{{map2}}</td>
              </tr>
              <tr>
                <td>Address</td>
                <td>{{address}}</td>
              </tr>
              <tr>
                <td>Phone</td>
                <td>{{phone}}</td>
              </tr>
              <tr>
                <td>Email</td>
                <td>{{email}}</td>
              </tr>
              <tr>
                <td>Whatsapp</td>
                <td>{{whatsapp}}</td>
              </tr>
              <tr>
                <td>YouTube</td>
                <td><a href="{{youtube}}" target="_blank">{{youtube}}</a></td>
              </tr>
              <tr>
                <td>Facebook</td>
                <td><a href="{{facebook}}" target="_blank">{{facebook}}</a></td>
              </tr>
              <tr>
                <td>Instagram</td>
                <td><a href="{{instagram}}" target="_blank">{{instagram}}</a></td>
              </tr>
              <tr>
                <td>Twitter</td>
                <td><a href="{{twitter}}" target="_blank">{{twitter}}</a></td>
              </tr>
              <tr>
                <td>Site Name</td>
                <td>{{sitename}}</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

{{>footer}}