{{>header}}
{{>navbar}}
{{>breadcrumb}}

<div class="container-fluid mt-4">
  <!-- Hero Banner -->
  <div class="sidebar bg-gradient bg-primary rounded-3 px-4 py-3 d-flex justify-content-between align-items-center text-white shadow-lg">
    <!-- Left: Heading -->
    <div class="d-flex align-items-center gap-2">
      <i class="fa fa-gear fs-4"></i>
      <h2 class="mb-0 fs-4 fw-bold text-white"> Admin Settings</h2>
    </div>

    <!-- Right: Action Icons -->
    <div class="d-flex align-items-center gap-3">
      <!-- Back -->
      <a href="/admin/events" class="text-white text-decoration-none" title="Back">
        <i class="bi bi-arrow-left-circle-fill fs-4 hover-icon"></i>
      </a>
      <!-- Edit -->
      <a href="/admin/createSettting" class="text-white text-decoration-none" title="Create & Edit">
        <i class="bi bi-pencil-fill fs-4 hover-icon"></i>
      </a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container-fluid bg-gradient bgblack ">
    <div class="row pt-4">
      <!-- Sidebar -->
      <div class="col-md-2">
        {{>sidebar}}
      </div>

      <!-- Settings Table -->
      <div class="col-md-10 mb-3">
        <div class="card shadow-lg border rounded-4">
          <div class="card-header bg-dark text-white rounded-top-4">
            <h5 class="mb-0 text-white"><i class="bi bi-sliders me-2 text-white"></i> Website Configuration</h5>
          </div>
          <div class="card-body p-4">
            <div class="table-responsive"> 
              <table class="table table-hover table-bordered align-middle">
                  <thead class="table-primary text-dark">
                    <tr>
                      <th class="fw-bold w-25">Field</th>
                      <th class="fw-bold w-75">Value</th>
                    </tr>
                  </thead>
                  <tbody class="break-word ">
                    <tr>
                      <th ><i class="bi bi-geo-alt-fill text-danger me-2"></i> Google Map URL 1</th>
                      <td ><a href="{{data.map1}}" target="_blank" class="text-decoration-none text-primary ">{{data.map1}}</a></td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-geo-alt-fill text-danger me-2"></i> Google Map URL 2</th>
                      <td ><a href="{{data.map2}}" target="_blank" class="text-decoration-none text-primary">{{data.map2}}</a></td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-house-door-fill text-success me-2"></i> Address</th>
                      <td >{{data.address}}</td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-telephone-fill text-info me-2"></i> Phone</th>
                      <td ><span class="badge bg-info text-dark">{{data.phone}}</span></td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-envelope-fill text-warning me-2"></i> Email</th>
                      <td ><a href="mailto:{{data.email}}" class="text-decoration-none">{{data.email}}</a></td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-whatsapp text-success me-2"></i> Whatsapp</th>
                      <td >{{data.whatsapp}}</td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-youtube text-danger me-2"></i> YouTube</th>
                      <td ><a href="{{data.youtube}}" target="_blank" class="text-decoration-none">{{data.youtube}}</a></td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-facebook text-primary me-2"></i> Facebook</th>
                      <td ><a href="{{data.facebook}}" target="_blank" class="text-decoration-none">{{data.facebook}}</a></td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-instagram text-danger me-2"></i> Instagram</th>
                      <td ><a href="{{data.instagram}}" target="_blank" class="text-decoration-none">{{data.instagram}}</a></td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-twitter text-info me-2"></i> Twitter</th>
                      <td ><a href="{{data.twitter}}" target="_blank" class="text-decoration-none">{{data.twitter}}</a></td>
                    </tr>
                    <tr>
                      <th ><i class="bi bi-globe text-secondary me-2"></i> Site Name</th>
                      <td ><span class="fw-bold text-dark">{{data.sitename}}</span></td>
                    </tr>
                    <tr>
                    <th>
                      <i class="bi bi-person-fill text-secondary me-2"></i> CreateBy
                    </th>
                    {{#if data.createBy}}
                    <td>
                      <span class="fw-bold text-success">{{data.createBy}}</span>
                      &emsp; at <span class="text-dark">{{formatDateTime data.createdAt}}</span>
                    </td>
                    {{else}}
                    <td></td>
                    {{/if}}
                  </tr>
                  <tr>
                    <th>
                      <i class="bi bi-pencil-square text-secondary me-2"></i> UpdateBy
                    </th>
                    {{#if data.updateBy}}
                    <td>
                      <span class="fw-bold text-success">{{data.updateBy}}</span>
                      &emsp; <span class="text-dark">{{formatDateTime data.updatedAt}}</span>
                    </td>
                    {{else}}
                    <td></td>
                    {{/if}}
                    <tr>
                  </tbody>
            </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{>footer}}