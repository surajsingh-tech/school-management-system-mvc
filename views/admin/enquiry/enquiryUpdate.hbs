{{>header}}
{{>navbar}}
{{>breadcrumb}}

<div class="container py-4 bg-light">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-xl-7">

      <div class="card border-0 shadow rounded-4 overflow-hidden">

        <!-- Header -->
        <div class="card-header text-white d-flex justify-content-between align-items-center"
          style="background: linear-gradient(135deg, #4b6cb7, #182848);">
          <h4 class="mb-0 fw-bold text-white">
            <i class="bi bi-person-lines-fill me-2"></i> Update Enquiry Status
          </h4>
          <a href="/admin/enquiry" class="btn btn-light btn-sm rounded-pill fw-semibold">
            <i class="bi bi-arrow-left"></i> Back
          </a>
        </div>

        <!-- Body -->
        <div class="card-body p-4 bg-white">
          <form action="/admin/enquiry/update/store/{{userData._id}}" method="POST">

            <!-- Row 1 -->
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label fw-semibold">
                  <i class="bi bi-person-fill me-1"></i> First Name
                </label>
                <input type="text" name="name" value="{{userData.name}}"
                  class="form-control rounded-pill" readonly>
              </div>

              <div class="col-md-6">
                <label class="form-label fw-semibold">
                  <i class="bi bi-envelope-fill me-1"></i> Email
                </label>
                <input type="email" name="email" value="{{userData.email}}"
                  class="form-control rounded-pill" readonly>
              </div>
            </div>

            <!-- Row 2 -->
            <div class="row g-3 mt-1">
              <div class="col-md-6">
                <label class="form-label fw-semibold">
                  <i class="bi bi-telephone-fill me-1"></i> Contact Number
                </label>

                <!-- Call on click -->
                <div class="input-group">
                  <input type="tel" value="{{userData.phone}}"
                    class="form-control rounded-start-pill" readonly>
                  <a href="tel:{{userData.phone}}"
                     class="btn btn-success rounded-end-pill"
                     title="Call Now">
                    <i class="bi bi-telephone-outbound-fill"></i>
                  </a>
                </div>
              </div>

              <div class="col-md-6">
                <label class="form-label fw-semibold ">
                  <i class="bi bi-toggle-on me-1"></i> Update Enquiry Status
                </label>
                    <select name="status" class="form-select rounded-pill fw-semibold">
                      <option value={{userData.status}} disabled selected>{{upercase userData.status}}</option>
                      <option value="process">In Process</option>
                      <option value="resolve">Resolved</option>
                      <option value="reject">Rejected</option>
                    </select>
              </div>
            </div>

            <!-- Subject -->
            <div class="mt-3">
              <label class="form-label fw-semibold">
                <i class="bi bi-chat-left-text-fill me-1"></i> Subject
              </label>
              <input type="text" value="{{userData.subject}}"
                class="form-control rounded-pill" readonly>
            </div>

            <!-- Message -->
            <div class="mt-3">
              <label class="form-label fw-semibold">
                <i class="bi bi-pencil-square me-1"></i> Message
              </label>
              <textarea rows="4"
                class="form-control rounded-4" readonly>{{userData.message}}</textarea>
            </div>

            <!-- Button -->
            <div class="text-center mt-4">
              <button type="submit"
                class="btn px-5 py-2 rounded-pill fw-bold text-white"
                style="background: linear-gradient(135deg, #1d976c, #93f9b9); box-shadow: 0 6px 16px rgba(0,0,0,0.2);">
                <i class="bi bi-check-circle-fill me-1"></i> Update Status
              </button>
            </div>

          </form>
        </div>
      </div>

    </div>
  </div>
</div>

{{>footer}}
